{
  "name": "wordpack",
  "version": "1.0.0",
  "description": "a wordpress theme boilerplate with webpack",
  "main": "src/js/homepage.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:webpack": "webpack --watch --config ./wordpack/webpack.config.js",
    "watch:images": "node ./wordpack/image.config.js --watch",
    "watch:css": "node-sass --importer node_modules/node-sass-magic-importer/dist/cli.js src/sass/ -o ./assets/css/ --output-style expanded -w",
    "watch": "npm-run-all --parallel watch:webpack watch:images watch:css",
    "prod": "npm-run-all --parallel prod:js prod:css prod:images",
    "prod:js": "cross-env NODE_ENV=production webpack --config ./wordpack/webpack.config.js",
    "prod:css": "node-sass --importer node_modules/node-sass-magic-importer/dist/cli.js src/sass/ -o ./assets/css/ --output-style compressed",
    "prod:images": "node ./wordpack/image.config.js",
    "critical:css": "",
    "zip:theme": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnzoEmb/wordpack.git"
  },
  "author": "Enzo Vergara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EnzoEmb/wordpack/issues"
  },
  "homepage": "https://github.com/EnzoEmb/wordpack#readme",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "browser-sync-webpack-plugin": "^2.3.0",
    "chokidar": "^3.5.1",
    "chunks-webpack-plugin": "^7.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "laravel-mix": "^6.0.11",
    "node-sass": "^5.0.0",
    "node-sass-magic-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^5.0.0",
    "puppeteer": "^7.0.1",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.6",
    "sass-loader": "^11.0.0",
    "sharp": "^0.27.1",
    "webpack": "^5.21.1",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "jquery": "^3.5.1",
    "swiper": "^6.4.10"
  }
}
